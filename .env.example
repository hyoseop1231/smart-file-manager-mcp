# Smart File Manager Environment Configuration
# Copy this file to .env and customize as needed

# === CORE SETTINGS ===
COMPOSE_PROJECT_NAME=smart-file-manager
PORT=8001
SUPERVISOR_PORT=9001

# === DIRECTORIES TO WATCH ===
# Customize these paths based on your system
# Use absolute paths or ${HOME} variable
HOME_DOCUMENTS=${HOME}/Documents
HOME_DOWNLOADS=${HOME}/Downloads
HOME_DESKTOP=${HOME}/Desktop
HOME_PICTURES=${HOME}/Pictures
HOME_MOVIES=${HOME}/Movies
HOME_MUSIC=${HOME}/Music

# === OLLAMA SETTINGS ===
OLLAMA_HOST=0.0.0.0
OLLAMA_PORT=11434
OLLAMA_API_URL=http://host.docker.internal:11434/api/generate

# === INDEXING INTERVALS (in seconds) ===
FULL_INDEXING_INTERVAL=7200    # 2 hours
QUICK_INDEXING_INTERVAL=1800   # 30 minutes  
CLEANUP_INTERVAL=86400         # 24 hours

# === ADVANCED SETTINGS ===
# GPU Support (set to false if no GPU available)
ENABLE_GPU=true

# Model Selection
DEFAULT_TEXT_MODEL=qwen2.5:3b
DEFAULT_VISION_MODEL=llava:13b
DEFAULT_EMBEDDING_MODEL=nomic-embed-text

# Performance Settings
MAX_CONCURRENT_ANALYSIS=5
CACHE_TTL=3600
DB_WAL_MODE=true

# === LOGGING ===
LOG_LEVEL=INFO
ENABLE_DEBUG=false

# === SECURITY ===
# Supervisor web interface credentials
SUPERVISOR_USERNAME=admin
SUPERVISOR_PASSWORD=admin123

# === NETWORK ===
NETWORK_NAME=smart-file-manager-network

# === VOLUME SETTINGS ===
# Set to true to use external volumes
USE_EXTERNAL_VOLUMES=false

# External volume names (if USE_EXTERNAL_VOLUMES=true)
EXTERNAL_DB_VOLUME=smart-file-db
EXTERNAL_EMBEDDINGS_VOLUME=smart-file-embeddings
EXTERNAL_METADATA_VOLUME=smart-file-metadata
EXTERNAL_OLLAMA_VOLUME=smart-file-ollama